@model Store.Models.EditProductViewModel

@{
    ViewBag.Title = "Admin module: editing " + Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <h3>Editing @Model.Name</h3>
    </div>



    @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
               
        <div class="panel-body">
            @Html.TextEditingFormControl(m => m.Name)
            @Html.TextEditingFormControl(m => m.Description)
            @Html.EnumDropDownListFor(m => m.Category)

            @foreach (var prop in ViewData.ModelMetadata.Properties)
            {
                switch (prop.PropertyName)
                {
                    case "ImageData":
                        break;
                    case "Category":
                        <div>
                            <label>@prop.PropertyName</label>


                        </div>
                        break;
                    case "ProductColour":
                        <div>
                            <label>@prop.PropertyName</label>
                            @{ var enumList = Enum.GetValues(typeof(Store.Domain.Entities.Colour)).Cast<Store.Domain.Entities.Colour>();
                                foreach (var optVal in enumList)
                                {
                                    <label>
                                        @Html.CheckBox(optVal.ToString(), new { value = Convert.ToInt32(optVal).ToString() })
                                        @optVal
                                    </label>
                                }
                           }
                        </div>
                        break;
                    default:
                        <div class="form-group">
                            <label>@prop.PropertyName</label>
                            @if (prop.PropertyName == "Description")
                            {
                                @Html.TextArea(prop.PropertyName, null, new { @class = "form-control", rows = 5 })
                            }
                            else
                            {
                                @Html.TextBox(prop.PropertyName, null, new { @class = "form-control" })
                            }
                            @Html.ValidationMessage(prop.PropertyName)
                        </div>
                        break;
                }
            }

            <div class="form-group">
                <div style="position:relative">
                    <label for="file">Upload Image:</label>
                    <input type="file" name="file" id="file" style="width: 100%;" />
                    <span class="label label-info" id="upload-file-info"></span>
                </div>
                @if (Model.ImageData == null)
                {
                    <div class="form-control-static">
                        No Image
                    </div>
                }
                else
                {
                    <img class="img-thumbnail" width="150" height="150" src="@Url.Action("GetImage", "Admin")" />
                }

            </div>
        </div>

        <div class="panel-footer">
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Cancel", "Index", "Admin", new { @class = "btn btn-default" })

        </div>
    }
</div>